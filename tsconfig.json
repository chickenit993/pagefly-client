{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es2017",
    "sourceMap": true,
    "noImplicitAny": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "*": [
        "*",
        "shared/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "typeRoots" : ["./src/types"]
}
